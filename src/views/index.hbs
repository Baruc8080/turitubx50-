<div class="card bg-white text-dark">

  <div class="card-header d-flex align-items-center card-bg">
    <h2 class="text-white">Sube Tu Imagen</h2>
  </div>

  {{! IMAGE UPLOAD FORM }}
  <div class="card-body p-5">
    <form action="/images" method="POST" enctype="multipart/form-data">

      <div class="mb-3">
        <input type="file" name="image" class="form-control text-dark border-success" required />
      </div>

      <div class="mb-3">
        <input type="text" name="title" class="form-control bg-white text-dark border border-success"
          placeholder="Title for the Image" required />
      </div>

      <div class="mb-3">
        <textarea name="description" rows="2" class="form-control bg-white text-dark border border-success"
          placeholder="Description for the Image" required></textarea>
      </div>

      <div class="form-group">
        <button class="btn btn-success">
          <i class="fa fa-upload"></i>
          Upload Image
        </button>
      </div>

    </form>
  </div>
</div>

<div class="card mt-2">
  <div class="card-header card-bg text-white">
    <h3>Recent Upload</h3>
  </div>
  <div class="card-body">
    <div class="row">
      {{#each images}}
      <div class="col-md-4">
        <a href="/images/{{filename}}">
          <img src="/public/upload/{{filename}}" alt="" class="w-100 h-100 img-thumbnail">
        </a>
      </div>
      {{/each}}
    </div>
  </div>
</div>
